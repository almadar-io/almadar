{
  "name": "@almadar/server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --watch ../shared/src --ext ts,js,json --exec tsx src/index.ts",
    "build": "tsc -b",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=dist/index.js --alias:@almadar/shared=../shared/src/index.ts --external:express --external:cors --external:helmet --external:zod --external:dotenv --external:firebase-admin --external:@faker-js/faker",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@almadar/shared": "*",
    "@faker-js/faker": "^9.3.0",
    "ws": "^8.18.0",
    "express": "^4.21.0",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "zod": "^3.24.0",
    "dotenv": "^16.4.0",
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0",
    "tsx": "^4.19.0",
    "nodemon": "^3.0.2",
    "vitest": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.0"
  }
}
