{
  "name": "orbital-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node packages/server/dist/index.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:server": "npm run dev -w @almadar/server",
    "dev:client": "npm run dev -w @almadar/client",
    "build": "npm run build:shared && npm run build:client && npm run build:server",
    "build:all": "npm run build:shared && npm run build --workspaces --if-present",
    "build:shared": "npm run build -w @almadar/shared",
    "build:client": "npm run build -w @almadar/client",
    "build:server": "npx esbuild packages/server/src/index.ts --bundle --platform=node --target=node20 --format=esm --outfile=packages/server/dist/index.js --alias:@almadar/shared=./packages/shared/src/index.ts --external:express --external:cors --external:helmet --external:zod --external:dotenv --external:firebase-admin --external:@faker-js/faker",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint packages --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "typecheck": "tsc -b",
    "deploy": "npm run deploy:hosting && npm run deploy:firestore",
    "deploy:hosting": "npm run build:client && firebase deploy --only hosting:{{SITE_NAME}}",
    "deploy:hosting:preview": "npm run build:client && firebase hosting:channel:deploy preview --expires 7d --only {{SITE_NAME}}",
    "deploy:apphosting": "npm run build:server && firebase deploy --only apphosting",
    "deploy:firestore": "firebase deploy --only firestore --force",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes --force",
    "deploy:all": "npm run deploy && npm run deploy:apphosting",
    "firebase:login": "firebase login",
    "firebase:init": "firebase init",
    "firebase:use": "firebase use {{FIREBASE_PROJECT_ID}}",
    "firebase:setup:hosting": "firebase hosting:sites:get {{SITE_NAME}} --project {{FIREBASE_PROJECT_ID}} 2>/dev/null || firebase hosting:sites:create {{SITE_NAME}} --project {{FIREBASE_PROJECT_ID}}",
    "firebase:setup:apphosting": "firebase apphosting:backends:get {{BACKEND_NAME}} --project {{FIREBASE_PROJECT_ID}} 2>/dev/null || firebase apphosting:backends:create --backend {{BACKEND_NAME}} --project {{FIREBASE_PROJECT_ID}} --primary-region us-central1 --root-dir . --non-interactive",
    "firebase:setup:firestore": "firebase firestore:databases:get {{SITE_NAME}} --project {{FIREBASE_PROJECT_ID}} 2>/dev/null || firebase firestore:databases:create {{SITE_NAME}} --location nam5 --project {{FIREBASE_PROJECT_ID}}",
    "firebase:setup": "npm run firebase:setup:firestore && npm run firebase:setup:hosting && npm run firebase:setup:apphosting",
    "deploy:setup": "npm run firebase:use && npm run firebase:setup",
    "logs": "firebase apphosting:backends:logs {{BACKEND_NAME}}",
    "logs:live": "firebase apphosting:backends:logs {{BACKEND_NAME}} --follow"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jsdom": "^22.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
