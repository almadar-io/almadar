{
    "name": "@kflow-builder/website",
    "version": "1.0.0",
    "description": "Almadar/KFlow public website with Handlebars templates",
    "type": "module",
    "scripts": {
        "generate:docs": "node scripts/generate-std-docs.js",
        "build": "npm run generate:docs && node scripts/build.js",
        "dev": "node scripts/build.js --watch",
        "serve": "npx http-server build -c-1 -p 8081",
        "start": "npm run build && npm run serve"
    },
    "dependencies": {
        "handlebars": "^4.7.8"
    },
    "devDependencies": {
        "chokidar": "^3.5.3",
        "esbuild": "^0.27.2"
    }
}