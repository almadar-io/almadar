<!DOCTYPE html>
<html lang="en">
{{> header }}

<body>
    {{> navigation }}

    <div class="stdlib-layout">
        <!-- Sidebar -->
        <aside class="stdlib-sidebar">
            <div class="sidebar-header">
                <a href="docs.html" class="back-link">‚Üê Back to Docs</a>
            </div>

            <div class="sidebar-search">
                <input type="text" id="sidebar-search" placeholder="Search..." autocomplete="off">
            </div>

            <div id="sidebar-nav"></div>
        </aside>

        <!-- Main Content -->
        <main class="stdlib-content">
            {{{body}}}
        </main>
    </div>

    {{> footer }}
    {{> scripts }}

    <style>
        /* Standalone Stdlib Layout - matches docs.css */
        .stdlib-layout {
            display: flex;
            min-height: calc(100vh - 80px);
            padding-top: 80px;
        }

        .stdlib-sidebar {
            width: 280px;
            flex-shrink: 0;
            background: var(--bg-darker, #0d0d1a);
            border-right: 1px solid var(--border, #333);
            position: fixed;
            top: 80px;
            left: 0;
            height: calc(100vh - 80px);
            overflow-y: auto;
            padding: 0;
            z-index: 50;
        }

        .sidebar-header {
            padding: 1rem 1.25rem;
            border-bottom: 1px solid var(--border-subtle, #333);
        }

        .back-link {
            color: var(--accent-primary, #00d4ff);
            text-decoration: none;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        .sidebar-search {
            padding: 1rem 1.25rem;
            border-bottom: 1px solid var(--border-subtle, #333);
        }

        .sidebar-search input {
            width: 100%;
            padding: 0.6rem 0.8rem;
            border: 1px solid var(--border-subtle, #333);
            border-radius: 6px;
            background: var(--surface-elevated, #1a1a2e);
            color: var(--text-primary, #fff);
            font-size: 0.875rem;
        }

        .sidebar-search input:focus {
            outline: none;
            border-color: var(--accent-primary, #00d4ff);
        }

        #sidebar-nav {
            padding: 1rem 0;
        }

        .sidebar-section {
            margin-bottom: 0.5rem;
        }

        .sidebar-title {
            padding: 0.5rem 1.25rem;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: var(--text-muted, #888);
        }

        .sidebar-nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1.25rem;
            color: var(--text-secondary, #ccc);
            text-decoration: none;
            font-size: 0.875rem;
            transition: all 0.15s ease;
        }

        .sidebar-link:hover {
            background: var(--surface-hover, #252540);
            color: var(--text-primary, #fff);
        }

        .sidebar-link.active {
            background: rgba(0, 212, 255, 0.1);
            color: var(--accent-primary, #00d4ff);
            border-left: 2px solid var(--accent-primary, #00d4ff);
        }

        .sidebar-link .icon {
            font-size: 1rem;
        }

        .sidebar-link .count {
            margin-left: auto;
            font-size: 0.75rem;
            color: var(--text-muted, #888);
            background: var(--surface-elevated, #1a1a2e);
            padding: 0.1rem 0.4rem;
            border-radius: 4px;
        }

        .stdlib-content {
            flex: 1;
            margin-left: 280px;
            padding: 2rem 3rem;
            max-width: 900px;
        }

        /* Responsive */
        @media (max-width: 900px) {
            .stdlib-sidebar {
                display: none;
            }

            .stdlib-content {
                padding: 1.5rem;
            }
        }
    </style>
</body>

</html>