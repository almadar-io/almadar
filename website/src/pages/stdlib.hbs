<!-- Load and render documentation -->
<script>
    let allModulesData = null;

    document.addEventListener('DOMContentLoaded', async function () {
        try {
            // Load the generated JSON data
            const response = await fetch('data/stdlib-modules.json');
            const data = await response.json();
            allModulesData = data;

            // Build sidebar navigation
            buildSidebar(data.modules);

            // Render modules
            const container = document.getElementById('modules-container');
            container.innerHTML = data.modules.map(renderModule).join('');

            // Setup search
            setupSearch();

            // Setup scroll spy
            setupScrollSpy();

        } catch (error) {
            console.error('Failed to load stdlib documentation:', error);
        }
    });

    function buildSidebar(modules) {
        const nav = document.getElementById('sidebar-nav');
        nav.innerHTML = modules.map(module => `
        <div class="sidebar-section">
            <a href="#${module.id}" class="sidebar-link" data-module="${module.id}">
                <span class="icon">${module.icon}</span>
                <span>${module.displayName}</span>
                <span class="count">${module.operatorCount}</span>
            </a>
        </div>
    `).join('');
    }

    function setupSearch() {
        const sidebarSearch = document.getElementById('sidebar-search');
        const mobileSearch = document.getElementById('mobile-search');

        const doSearch = (query) => {
            const q = query.toLowerCase().trim();

            if (!q) {
                // Show all
                document.querySelectorAll('.operator-card').forEach(card => {
                    card.style.display = '';
                });
                document.querySelectorAll('.module-section').forEach(section => {
                    section.style.display = '';
                });
                return;
            }

            // Filter operators
            let visibleModules = new Set();
            document.querySelectorAll('.operator-card').forEach(card => {
                const name = card.dataset.name?.toLowerCase() || '';
                const desc = card.dataset.desc?.toLowerCase() || '';
                if (name.includes(q) || desc.includes(q)) {
                    card.style.display = '';
                    visibleModules.add(card.closest('.module-section')?.id);
                } else {
                    card.style.display = 'none';
                }
            });

            // Show/hide modules based on visible operators
            document.querySelectorAll('.module-section').forEach(section => {
                const hasVisible = section.querySelectorAll('.operator-card:not([style*="display: none"])').length > 0;
                section.style.display = hasVisible ? '' : 'none';
            });
        };

        if (sidebarSearch) {
            sidebarSearch.addEventListener('input', (e) => doSearch(e.target.value));
        }
        if (mobileSearch) {
            mobileSearch.addEventListener('input', (e) => doSearch(e.target.value));
        }
    }

    function setupScrollSpy() {
        const sections = document.querySelectorAll('.module-section');
        const navLinks = document.querySelectorAll('.sidebar-link');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    navLinks.forEach(link => {
                        link.classList.remove('active');
                        if (link.getAttribute('href') === '#' + entry.target.id) {
                            link.classList.add('active');
                        }
                    });
                }
            });
        }, { rootMargin: '-20% 0px -70% 0px' });

        sections.forEach(section => observer.observe(section));
    }

    function renderModule(module) {
        return `
        <section id="${module.id}" class="module-section">
            <h2>
                <span class="module-icon">${module.icon}</span>
                ${module.displayName}
            </h2>
            <p>${module.description}</p>
            <p class="module-meta">${module.operatorCount} operators</p>
            
            <div class="operators-grid">
                ${module.operators.map(renderOperator).join('')}
            </div>
        </section>
    `;
    }

    function renderOperator(op) {
        const paramsHtml = op.params.length > 0
            ? `<div class="op-params">
            <table class="params-table">
                <thead><tr><th>Parameter</th><th>Type</th><th>Description</th></tr></thead>
                <tbody>
                    ${op.params.map(p => `
                        <tr>
                            <td><code>${p.name}</code>${p.optional ? ' <em>(opt)</em>' : ''}</td>
                            <td><code>${p.type}</code></td>
                            <td>${p.description}${p.defaultValue !== undefined ? ` (default: <code>${p.defaultValue}</code>)` : ''}</td>
                        </tr>
                    `).join('')}
                </tbody>
            </table>
           </div>`
            : '';

        return `
        <div class="operator-card${op.pureFunction ? ' pure' : ' effect'}" data-name="${op.name}" data-desc="${op.description}">
            <div class="op-header">
                <code class="op-name">${op.name}</code>
                <span class="op-badge ${op.pureFunction ? 'pure' : 'effect'}">
                    ${op.pureFunction ? 'âœ¨ Pure' : 'âš¡ Effect'}
                </span>
            </div>
            <p class="op-description">${op.description}</p>
            ${paramsHtml}
            ${op.example ? `
                <div class="op-example">
                    <div class="example-label">Example:</div>
                    <code class="example-code">${escapeHtml(op.example)}</code>
                </div>
            ` : ''}
            <div class="op-meta">
                <span>Returns: <code>${op.returnTypeHuman}</code></span>
                <span>Args: ${op.arityHuman}</span>
            </div>
        </div>
    `;
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
</script>

